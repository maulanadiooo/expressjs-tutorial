<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Kategori</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Thumbnail</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0; i < voucher.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= voucher[i].name %></td>
      <td><%= voucher[i].category?.name ?? '-' %></td>
      <td>
        <% voucher[i].nominals.forEach(nominal => { %>
        <span class="badge badge-warning">
          <%= nominal.coinName %> <%= nominal.coinQuantity %>
        </span>
        <% }) %>
      </td>
      <td>
        <% if(voucher[i].status === true) { %>
        <span class="badge badge-success"> Aktif </span>
        <% } else { %>
        <span class="badge badge-danger"> Tidak Aktif </span>
        <% } %>
      </td>
      <td>
        <img
          src="/uploads/<%= voucher[i].thumbnail %>"
          width="10%"
          height="10%"
        />
      </td>
      <td>
        <form
          action="/voucher/update-status/<%= voucher[i]._id %>?_method=PUT"
          method="POST"
          style="display: inline-block"
        >
          <button class="btn btn-primary btn-sm">
            <i class="fas fa-folder"></i>
            Ubah Status
          </button>
        </form>
        <a
          href="/voucher/edit/<%= voucher[i]._id %>"
          class="btn btn-info btn-sm"
          ><i class="fas fa-pencil-alt"></i> Ubah</a
        >
        <form
          action="/voucher/delete/<%= voucher[i]._id %>?_method=DELETE"
          method="POST"
          style="display: inline-block"
        >
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i> Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
